<!DOCTYPE html>
<html>
	<head>
		<meta content='<%= user_signed_in? ? current_user.id : "" %>' name='user-id'/>
		<%= stylesheet_link_tag    'user_index', media: 'all', 'data-turbolinks-track'=> "reload" %>
	</head>	
	<style>
	     #sidebar
	     {
	     display: none;
	     }
	     #sidebar_right
	     {
	     display: none;
	     }
	     
	</style>
    <body class= "user_container">
	  <div class="vertical-menu">
	      <a> <%= link_to "Personal", current_user %></a>
	      <a> <%= link_to "Chat", {:controller=>"users", :action=>"index"} ,:class=>"active" %></a>
	      <a> <%= link_to "Forum", forum_path %></a>
	      <a> <%= link_to "Shop", shop_path %></a>
	      <a> <%= link_to "Upload", upload_path %></a>
	  </div> 
    	

		<div class="message_buttons">
			<% unless current_user.has_role? :admin %>
				<% @users.take(1).each.with_index do |user, index| %>
					    <tr>
					      <td><%= index +=1 %></td>
					      <td><%= user.username %></td>
					      <td>
					        <%= link_to "Send Message", "#", class: "btn btn-default btn-xs start-conversation",
					                    "data-sid" => current_user.id, "data-rip" => user.id %>
					      </td>
					    </tr>
					<% end %> 
			
			    
			<% else %>
				 <% @users.each.with_index do |user, index| %>
				    <tr>
				      <td><%= index +=1 %></td>
				      <td><%= user.username %></td>
				      <td>
				        <%= link_to "Send Message", "#", class: "btn btn-default btn-xs start-conversation",
				                    "data-sid" => current_user.id, "data-rip" => user.id %>
				      </td>
				    </tr>
				<% end %> 
			<% end %>	
		</div>
   
    </body>
</html>  